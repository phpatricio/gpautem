<% content_for :content_header  do %>
  <section class="content-header">
    <h1>Mostrando <small>seguimiento</small></h1>

    <ol class="breadcrumb">
      <li><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>
      <li class="active">seguimiento</li>
    </ol>    
  </section>
<% end %>

<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box box-primary">
        <div class="box-body table-responsive" id="ocultar-tabla">
          <table class="table table-bordered">
            <thead>
              <tr>
             	<th>Fecha visita 1</th>
      				<th>Fecha visita 2</th>
      				<th>Fecha visita 3</th>
              <th class="text-center">Acción</th>
               
              </tr>
            </thead>
              <tbody>
                <% @seguimientos.each do |seguimiento| %>
                  <tr>
					<td> <%= seguimiento.fecha_1 %> </td>
          <td> <%= seguimiento.fecha_2 %> </td>
          <td> <%= seguimiento.fecha_3 %> </td>
                    <td>

                      <div class="text-center">
							<%= link_to 'MOSTRAR', seguimiento_url(seguimiento),:class => "btn btn-info"%>
							<%= link_to 'EDITAR', editar_seguimiento_url(seguimiento) , :class => "btn btn-warning"%> 
							<%= link_to 'ELIMINAR', eliminar_seguimiento_url(seguimiento),:class => "btn btn-danger", 
													method: :delete,
													data: {confirm: '¿ESTAS SEGURO?'} %> </td>
                     </div> 
                    </td>
                   
                  </tr>
                <% end %> 
              </tbody>
          </table>
          <div class="apple_pagination">
            <div class="page_info">
              <%= page_entries_info @seguimientos %>
            </div>
            <%= will_paginate @seguimientos, :container => false, :value => "hola" %>
          </div>
        </div>   
      </div>
    </div>
  </div>
</section>