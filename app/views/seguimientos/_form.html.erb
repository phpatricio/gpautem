<%= form_for(@seguimiento, :html => {:role => 'form'}) do |f| %>
    <% if @seguimiento.errors.any? %>
        <%= pluralize(@seguimiento.errors.count, "Errores") %>
        <% @seguimiento.errors.full_messages.each do |error| %>
            <%= error %>
        <% end %>
    <% end %>
    <%= f.label :fecha_1 %>
    <%= f.text_field :fecha_1 %>

    <%= f.label :comentario_visita_1 %>
    <%= f.text_field :comentario_visita_1 %>

    <%= f.label :fecha_2 %>
    <%= f.text_field :fecha_2 %>

    <%= f.label :comentario_visita_2 %>
    <%= f.text_field :comentario_visita_2 %>

    <%= f.label :fecha_3 %>
    <%= f.text_field :fecha_3 %>

    <%= f.label :comentario_visita_3 %>
    <%= f.text_field :comentario_visita_3 %>

    <%= f.submit %>
<% end %>