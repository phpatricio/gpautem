<section class="content invoice">
  <div class="row">
    <div class="col-md-10">
      <%= form_for(@alumno, url: ed_url(params[:id]), :html => { :role => "form" }) do |f| %>
        <% if @alumno.errors.any? %>
          <div class="alert alert-danger alert-dismissable" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">x</button>
            <h4><%= pluralize(@alumno.errors.count, "error") %></h4>

            <ul>
            <% @alumno.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

      <div class="form-group">
        <%= f.label :user_id %>
        <%= f.collection_select(:user_id, User.where(:role_id =>"3"), :id, :nombre,{include_blank: 'Seleccione un opcion'}, :required => "true") %>
      </div>
      

      

      <div class="form-group">
        <%= f.submit :class => "btn btn-primary" %>
      </div>

    <% end %>
    </div>
  </div>
</section> 
