<% content_for :content_header  do %>
  <section class="content-header">
    <h1>Mostrando <small>alumnos</small></h1>

    <ol class="breadcrumb">
      <li><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>
      <li class="active">Alumnos</li>
    </ol>    
  </section>
<% end %>

<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box box-primary">
        <div class="box-header">
          <div class="box-tools pull-right">
            <%= link_to new_alumno_path(@alumno), :class => 'btn btn-success' do %>
              <span class="glyphicon glyphicon-plus"></span>
              Nuevo Alumno
            <% end %>          
          </div>
        </div>
        <div class="box-body table-responsive" id="ocultar-tabla">
          <table class="table table-bordered">
            <thead>
              <tr>
              <th>Rut</th>
              <th>Codigo Carrera</th>
              <th class="text-center">Acci√≥n</th>
               
              </tr>
            </thead>
              <tbody>
                <% @alumnos.each do |alumno| %>
                  <tr>

                    <td><%= alumno.rut %></td>
                    <td><%= alumno.codigo_carrera %></td>
                    <td>
                      <div class="text-center">
                    <%= link_to  'Evaluar', editar_evaluacion_url(alumno.practica.evaluacion_id), :class => "btn btn-info"%>
                    <%= link_to 'Seguimiento', editar_seguimiento_url(alumno.practica.seguimiento_id), :class => "btn btn-warning" %>
                     </div> 
                    </td>
                   
                  </tr>
                <% end %> 
              </tbody>
          </table>

        </div>   
      </div>
    </div>
  </div>
</section>

