<% content_for :content_header  do %>
  <section class="content-header">
    <h1>Listing <small>areas</small></h1>

    <ol class="breadcrumb">
      <li><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>
      <li class="active">areas</li>
    </ol>    
  </section>
<% end %>

<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box box-primary">
        <div class="box-header">
          <div class="box-tools pull-right">
            <%= link_to new_area_path(@area), :class => 'btn btn-success' do %>
              <span class="glyphicon glyphicon-plus"></span>
              New Area
            <% end %>          
          </div>
        </div>
        <div class="box-body table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
            
  <th>Nombre</th>
            
                <th></th>
                <th></th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @areas.each do |area| %> 
            
                  <td><%= area.nombre %></td>
            
                <td><%= link_to 'Show', area %></td>
                <td><%= link_to 'Edit', edit_area_path(area) %></td>
                <td><%= link_to 'Destroy', area, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>

