<section class="content invoice">
<div class="row">
  <div class="col-md-10">
    <%= form_for(@areas, :html => { :role => "form" }) do |f| %>
    <% if @areas.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">x</button>
      <h4><%= pluralize(@areas.errors.count, "error") %> </h4>
      <ul>
        <% @areas.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
    <% end %>
    <div class="form-group">
        <%= f.label :nombre %>
        <%= f.text_field :nombre,:class => "form-control" %>
        </br>
    </div>
    <div class="form-group">
        <%= f.submit %>
    </div>
  <% end %>
  </div>
</div>
</section> 