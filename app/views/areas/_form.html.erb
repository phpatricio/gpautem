<%= form_for(@area, :html => {:role => 'form'}) do |f| %>
    <% if @area.errors.any? %>
        <%= pluralize(@area.errors.count, "Errores") %>
        <% @area.errors.full_messages.each do |error| %>
            <%= error %>
        <% end %>
    <% end %>
    <%= f.label :nombre %>
    <%= f.text_field :nombre %>
	</br>
    <%= f.submit %>
<% end %>