
<% content_for :content_header  do %>
  <section class="content-header">
    <h1>Listando <small>Usuarios</small></h1>

    <ol class="breadcrumb">
      <li><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>
      <li class="active">Usuarios</li>
    </ol>    
  </section>
<% end %>



<section class="content">
          <div class="box-tools pull-right">
          
            <a href="users/sign_up"><span class="glyphicon glyphicon-plus"></span>
              Nuevo Cliente
              </a>
             
          </div>
  <div class="row">
    <div class="col-xs-12">
      <div class="box box-primary">

        <div class="box-body table-responsive">
          <table class="table table-bordered">
            <thead>
              <tr>
              <th>ID usuario</th>
              <th>Tipo de accesibilidad</th>
              <th>Creado en</th>
              <th>Ultima edicion</th>
              <th class="text-center">Acción</th>
               
              </tr>
            </thead>
              <tbody>
                <% @users.each do |user| %>
                  <tr>
                  <td><%= user.id %></td>
                  <td><%= user.role.nombre %></td>
                  <td><%= user.created_at %></td>
                  <td><%= user.updated_at %></td>
                  <td>
                      <div class="text-center">
                         <%= link_to  'Mostrar', user , :class => "btn btn-info"%>
                        
                         <% if user.id == current_user.id %>
                         <% else %>
                          <%= link_to "Editar", edit_user_path(user), :class => "btn btn-warning" %>
                         <%= link_to 'Eliminar' , user,:class => "btn btn-danger", method: :delete, data: { confirm: '¿Esta seguro de eliminar el usuario? Perdera todos los datos' } %>
                         <% end %>
                     </div> 
                    </td>
                   
                  </tr>
                <% end %> 
              </tbody>
          </table>
          <div class="apple_pagination">
            <div class="page_info">
              <%= page_entries_info @users %>
            </div>
            <%= will_paginate @users, :container => false %>
          </div>
        </div>     
      </div>
    </div>
  </div>
</section>


