<section class="content invoice">
<div class="row">
  <div class="col-md-10">
    <%= form_for(@convenios,url: crear_convenio_url(params[:id]) ,:html => { :role => "form" }) do |f| %>
    <% if @convenios.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">x</button>
      <h4><%= pluralize(@convenios.errors.count, "error") %> </h4>
      <ul>
        <% @convenios.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
    <% end %>
    <div class="form-group">
        <%= f.label :nombre %>
        <%= f.text_field :nombre,:class => "form-control" %>
        </br>
    </div>
    <div class="form-group">
        <%= f.label :fecha_inicio %>
        <%= f.date_select :fecha_inicio ,:class => "form-control" %>
        </br>
    </div>
    <div class="form-group">
        <%= f.label :fecha_termino %>
        <%= f.date_select :fecha_termino,:class => "form-control"  %>
        </br>
    </div>
    <div class="form-group">
        <%= f.label :descripcion %>
        <%= f.text_area :descripcion,:class => "form-control"  %>
        </br>
    </div>
    <div class="form-group">
        <%= f.submit %>
    </div>
  <% end %>
  </div>
</div>
</section> 