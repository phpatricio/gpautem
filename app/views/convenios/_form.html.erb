
<section class="content invoice">
<div class="row">
  <div class="col-md-10">
    <%= form_for(@convenios, :html => { :role => "form" }) do |f| %>


    <div class="form-group">
    <%= f.label :nombre %>
    <%= f.text_field :nombre,:class => "form-control" %>
    </div>
    <div class="form-group">
        <%= f.label :fecha_inicio %>
        <%= f.date_select :fecha_inicio ,:class => "form-control" %>
    </div>
    <div class="form-group">
        <%= f.label :fecha_termino %>
        <%= f.date_select :fecha_termino,:class => "form-control"  %>
    </div>
    <div class="form-group">
        <%= f.label :descripcion %>
        <%= f.text_area :descripcion,:class => "form-control"  %>
    </div>
    <div class="form-group">
        <%= f.submit %>
    </div>


  <% end %>
  </div>
</div>
</section> 