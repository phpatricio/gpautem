<%= form_for(@convenios, :html => {:role => 'form'}) do |f| %>
    <% if @convenios.errors.any? %>
        <%= pluralize(@convenios.errors.count, "Errores") %>
        <% @convenios.errors.full_messages.each do |error| %>
            <%= error %>
        <% end %>
    <% end %>
    <%= f.label :nombre %>
    <%= f.text_field :nombre %>

    <%= f.label :fecha_inicio %>
    <%= f.date_select :fecha_inicio %>

    <%= f.label :fecha_termino %>
    <%= f.date_select :fecha_termino %>

    <%= f.label :descripcion %>
    <%= f.text_field :descripcion %>

    <%= f.submit %>
<% end %>