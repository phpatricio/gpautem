<% content_for :content_header  do %>
  <section class="content-header">
    <h1>Listing <small>convenios</small></h1>

    <ol class="breadcrumb">
      <li><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>
      <li class="active">convenios</li>
    </ol>    
  </section>
<% end %>

<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box box-primary">
        <div class="box-header">
          <div class="box-tools pull-right">
            <%= link_to new_convenio_path(@convenio), :class => 'btn btn-success' do %>
              <span class="glyphicon glyphicon-plus"></span>
              New Convenio
            <% end %>          
          </div>
        </div>
        <div class="box-body table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
              <th>Nombre</th>
              <th>Fecha inicio</th>
              <th>Fecha termino</th>
              <th>Descripcion</th>
                            <th></th>
                <th></th>
                <th></th>
              </tr>
            </thead>
            <tbody>
                <% @convenios.each do |convenio| %>
              <td><%= convenio.nombre %></td>
              <td><%= convenio.fecha_inicio %></td>
              <td><%= convenio.fecha_termino %></td>
              <td><%= convenio.descripcion %></td>
                            <td><%= link_to 'Show', convenio %></td>
                <td><%= link_to 'Edit', edit_convenio_path(convenio) %></td>
                <td><%= link_to 'Destroy', convenio, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>

