<% content_for :content_header  do %>
  <section class="content-header">
    <h1>Mostrando <small>Planilla</small></h1>

    <ol class="breadcrumb">
      <li><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>
      <li class="active">Planilla</li>
    </ol>    
  </section>
<% end %>
<%= link_to " Imprimir", "#", onclick: "printPage()",:class => "btn btn-info fa fa-print" %> 
</br>
</br>

<u>
<h1 style= "text-align:center;" >Resumen de Evaluaciones de Alumnos <%= Date.current.year%></h1>
<h2 style = "text-align:center;">Profesor <%= current_user.nombre%></h2>
</u>

</br>
</br>
<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box box-primary">
        <div class="box-body table-responsive" id="ocultar-tabla">
          <table class="table table-bordered">
            <thead>
              <tr>

              <th>Nombre</th>
              <th>Rut</th>
              <th>Fecha de Evaluacion</th>
              <th>Nota de Informe</th>
              <th>Nota de Practica</th>
            </tr>
            </thead>
              <tbody>
                <% @alumn.each do |al| %>
              
                  <tr>
                    <% eva = Evaluacion.find(al.practica.evaluacion_id) %>
                  <td> <%= al.nombre %> </td>
                  <td> <%= al.rut %> </td>
                  <td> <%= eva.fecha_evaluacion %> </td>
                  <td> <%= eva.nota_informe_practica %> </td>
                  <td> <%= eva.nota %> </td>     
                  </tr>
                <% end %> 
              </tbody>
          </table>
        </div>   
      </div>
    </div>
  </div>
</section>
<script type="text/javascript">
  function printPage() {
    window.print();
  }
</script>