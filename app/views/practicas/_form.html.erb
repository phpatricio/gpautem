<section class="content invoice">
    <div class="row">
        <div class="col-md-10">
            <%= form_for(@practica, :html => {:role => 'form'}) do |f| %>
            <% if @practica.errors.any? %>
            <div class="alert alert-danger alert-dismissable" role="alert">
              <button type="button" class="close" data-dismiss="alert" aria-hidden="true">x</button>
              <h4><%= pluralize(@practica.errors.count, "error") %> </h4>
              <ul>
                <% @practica.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
            <% end %>
            <div class="form-group">
                 <%= f.label :fecha_inicio %>
                <%= f.text_field :fecha_inicio,:class => "form-control datepicker", :readonly => "true" %>
                 
            </div>
            <div class="form-group">
                <%= f.label :fecha_termino %>
                <%= f.text_field :fecha_termino,:class => "form-control datepicker", :readonly => "true" %>
               
            </div>
            <div class="form-group">
                <%= f.label :descripcion %>
                <%= f.text_area :descripcion_p,:class => "form-control"  %>
                </br>
            </div>
            
            
            <div class="form-group">
                <%= f.submit %>
            </div>
            <% end %>
        </div>
    </div>
</section> 
<script>
$(document).ready(function(){

    $('.datepicker').datepicker({
        language: 'es',
        format : 'yyyy-mm-dd'
    });
 
     
});
</script>