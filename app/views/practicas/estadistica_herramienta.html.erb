<h1>Estadistica de Practicas segun Herramientas</h1>
<%= pie_chart @cant %>
<%total = Herramienta.joins(:practica).count%>
<table class="table table-bordered">
        <thead>
          <tr>
          <th>Herramienta</th>
          <th>cantidad</th>
          <th>porcentaje</th>
           
          </tr>
        </thead>
          <tbody>
            <% @cant.each do |c| %>
              <tr>


                <td><%= c[0] %></td>
                <td><%= c[1] %></td>
                <td><%= (c[1].to_f/total)*100 %>%</td>
             
                
               
              </tr>
            <% end %> 
          </tbody>
      </table>