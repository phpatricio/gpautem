<section class="content invoice">
    <div class="row">
        <div class="col-md-10">
            <%= form_for(@practica,url: crear_oferta_path ,:html => {:role => 'form'}) do |f| %>

                <% if @practica.errors.any? %>
                <div class="alert alert-danger alert-dismissable" role="alert">
                  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">x</button>
                  <h4><%= pluralize(@practica.errors.count, "error") %> prohibited this practica from being saved:</h4>
      
                  <ul>
                  <% @practica.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                  <% end %>
                  </ul>
                </div>
              <% end %>

        <div class="form-group">
             <%= f.label :fecha_inicio %>
             <%= f.text_field :fecha_inicio,:class => "form-control datepicker", :readonly => "true",:required =>"true", :id =>"fecha_inicio" %>
              
         </div>
         <div class="form-group">
             <%= f.label :fecha_termino %>
             <%= f.text_field :fecha_termino,:class => "form-control datepicker",:readonly => "true",:required =>"true", :id =>"fecha_termino" %>
            
         </div>
            <div class="form-group">
                <%= f.label :descripcion %>
                <%= f.text_area :descripcion_p,:class => "form-control",:required =>"true"  %>
                </br>
            </div>
 
            <div class="form-group">
                <%= f.submit (@practica.persisted? ? 'Editar' : 'Crear'), :class =>"btn btn-primary",:id => "enviar" %>
            </div>
            <% end %>
        </div>
    </div>
</section> 
<script>
$(document).ready(function(){

    $('.datepicker').datepicker({
        language: 'es',
        format : 'yyyy-mm-dd'
    });
	$("#enviar").click(function(){
		var fecha_inicio = $("#fecha_inicio").val();
        var fecha_termino = $("#fecha_termino").val();
      
        if (fecha_inicio == ''){
            alert("Recuerde ingresar fecha de inicio");
        }
        if(fecha_termino == ''){
            alert("Recuerde ingresar fecha de termino");
        }
     
    });
  });
</script>