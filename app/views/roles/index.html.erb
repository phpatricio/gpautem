<% content_for :content_header  do %>
  <section class="content-header">
    <h1>Listando <small>Roles</small></h1>

    <ol class="breadcrumb">
      <li><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>
      <li class="active">Roles</li>
    </ol>    
  </section>
<% end %>

<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box box-primary">
        <div class="box-header">
          <div class="box-tools pull-right">
            <%= link_to new_role_path(@role), :class => 'btn btn-success' do %>
              <span class="glyphicon glyphicon-plus"></span>
              Nueva rol
            <% end %>          
          </div>
        </div>

        <div class="box-body table-responsive">
          <table class="table table-bordered">
            <thead>
              <tr>
              <th>Rol</th>
              <th>Rol Producto</th>
              <th>Rol Venta Unidad</th>
              <th>Rol por </th>

              <th class="text-center">Acción</th>
   
              </tr>
            </thead>
              <tbody>
                <% @roles.each do |role| %>
                  <tr>
              <td><%=  %></td>
              <td><%= role.id %></td>
              <td><%= role.id %></td>
              <td><%= role.id %></td>
                        <td>
                          <div class="text-center">
                        <%= link_to  'Mostrar', role , :class => "btn btn-info"%>
                        <%= link_to 'Editar', edit_role_path(role), :class => "btn btn-warning" %>
                        <%= link_to 'Eliminar' , role,:class => "btn btn-danger", method: :delete, data: { confirm: '¿Esta seguro de eliminar el role?' } %>
                         </div> 
                        </td>
                  </tr>
                <% end %> 
              </tbody>
          </table>
          <div class="apple_pagination">
            <div class="page_info">
              <%= page_entries_info @roles %>
            </div>
            <%= will_paginate @roles, :container => false %>
          </div>
        </div>  
      </div>
    </div>
  </div>
</section>
