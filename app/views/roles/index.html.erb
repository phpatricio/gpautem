<% content_for :content_header  do %>
  <section class="content-header">
    <h1>Listing <small>roles</small></h1>

    <ol class="breadcrumb">
      <li><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>
      <li class="active">roles</li>
    </ol>    
  </section>
<% end %>

<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box box-primary">
        <div class="box-header">
          <div class="box-tools pull-right">
            <%= link_to new_role_path(@role), :class => 'btn btn-success' do %>
              <span class="glyphicon glyphicon-plus"></span>
              New Role
            <% end %>          
          </div>
        </div>
        <div class="box-body table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
            
  <th>Nombre</th>
            
                <th></th>
                <th></th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <%=  @roles.each do |role| %>
            
  <td><%= role.nombre %></td>
            
                <td><%= link_to 'Show', role %></td>
                <td><%= link_to 'Edit', edit_role_path(role) %></td>
                <td><%= link_to 'Destroy', role, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>

