<% content_for :content_header  do %>
  <section class="content-header">
    <h1>Listing <small>herramienta</small></h1>

    <ol class="breadcrumb">
      <li><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>
      <li class="active">herramienta</li>
    </ol>    
  </section>
<% end %>

<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box box-primary">
        <div class="box-header">
          <div class="box-tools pull-right">
            <%= link_to new_herramientum_path(@herramienta), :class => 'btn btn-success' do %>
              <span class="glyphicon glyphicon-plus"></span>
              New herramienta
            <% end %>          
          </div>
        </div>
        <div class="box-body table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
                            <th></th>
                <th></th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @herramienta.each do |herramienta| %>
                            <td><%= link_to 'Show', herramienta %></td>
                <td><%= link_to 'Edit', edit_herramienta_path(herramienta) %></td>
                <td><%= link_to 'Destroy', herramienta, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>

