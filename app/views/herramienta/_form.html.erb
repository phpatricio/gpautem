<%= form_for(@herramienta, :html => {:role => 'form'}) do |f| %>
    <% if @herramientas.errors.any? %>
        <%= pluralize(@herramientas.errors.count, "Errores") %>
        <% @herramientas.errors.full_messages.each do |error| %>
            <%= error %>
        <% end %>
    <% end %>
    <%= f.label :nombre %>
    <%= f.text_field :nombre %>

    <%= f.submit %>
<% end %>