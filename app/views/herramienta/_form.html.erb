
<%= form_for(@herramienta, :html => {:role => 'form'}) do |f| %>
    <% if @herramienta.errors.any? %>
        <%= pluralize(@herramienta.errors.count, "Errores") %>
        <% @herramienta.errors.full_messages.each do |error| %>
            <%= error %>
        <% end %>
    <% end %>
    <%= f.label :nombre %>
    <%= f.text_field :nombre %>
	</br>
    <%= f.submit %>
<% end %>