<% content_for :content_header  do %>
  <section class="content-header">
    <h1>Listing <small>semestres</small></h1>

    <ol class="breadcrumb">
      <li><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>
      <li class="active">semestres</li>
    </ol>    
  </section>
<% end %>

<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box box-primary">
        <div class="box-header">
          <div class="box-tools pull-right">
            <%= link_to new_semestre_path(@semestre), :class => 'btn btn-success' do %>
              <span class="glyphicon glyphicon-plus"></span>
              New Semestre
            <% end %>          
          </div>
        </div>
        <div class="box-body table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
            
  <th>Numero semestre</th>
            
                <th></th>
                <th></th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <%=  @semestres.each do |semestre| %>
            
              <td><%= semestre.numero_semestre %></td>    
                <td><%= link_to 'Show', semestre %></td>
                <td><%= link_to 'Edit', edit_semestre_path(semestre) %></td>
                <td><%= link_to 'Destroy', semestre, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>

