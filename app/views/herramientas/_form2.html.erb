<section class="content invoice">
    <div class="row">
        <div class="col-md-10">
            <%= form_for(@herramienta,url: crear_herramienta_url(params[:id]), :html => {:role => 'form'}) do |f| %>
            <div class="form-group">
                <%= f.label :nombre %>
                <%= f.text_field :nombre,:class => "form-control" %>
                </br>
            </div>
            <div class="form-group">
                <%= f.submit %>
            </div>
            <% end %>
        </div>
    </div>
</section>