<% content_for :content_header  do %>
  <section class="content-header">
    <h1>Mostrando <small>herramientas</small></h1>

    <ol class="breadcrumb">
      <li><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>
      <li class="active">herramientas</li>
    </ol>    
  </section>
<% end %>

<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box box-primary">
        <div class="box-header">
          <div class="box-tools pull-right">
            <%= link_to herramientas_nuevo_path(@herramienta), :class => 'btn btn-success' do %>
              <span class="glyphicon glyphicon-plus"></span>
              Nueva Herramienta
            <% end %>          
          </div>
        </div>
        <div class="box-body table-responsive" id="ocultar-tabla">
          <table class="table table-bordered">
            <thead>
              <tr>
              <th>Nombre</th>
              <th class="text-center">AcciÃ³n</th>
               
              </tr>
            </thead>
              <tbody>
                <% @herramientas.each do |herramienta| %>
                  <tr>
						<td> <%= herramienta.nombre %> </td>
						<td>

                     <div class="text-center">
							<%= link_to 'MOSTRAR', herramienta_url(herramienta),:class => "btn btn-info"%>
							<%= link_to 'EDITAR', herramientum_url(herramienta) , :class => "btn btn-warning"%> 
							<%= link_to 'ELIMINAR', eliminar_herramienta_url(herramienta),:class => "btn btn-danger", 
													method: :delete,
													data: {confirm: 'Â¿ESTAS SEGURO?'} %> </td>
                     </div> 
                    </td>
                   
                  </tr>
                <% end %> 
              </tbody>
          </table>
          <div class="apple_pagination">
            <div class="page_info">
              <%= page_entries_info @herramientas %>
            </div>
            <%= will_paginate @herramientas, :container => false, :value => "hola" %>
          </div>
        </div>   
      </div>
    </div>
  </div>
</section>