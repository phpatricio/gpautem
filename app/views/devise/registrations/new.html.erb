        <h2><img src="/img/utem.png"/> Gesti√≥n de practicas UTEM</h2>
        <h2>Registro</h2>
        <div class="panel-body">
        

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
   <%= f.label :nombre %><br />
   <%= f.text_field :nombre, autofocus: true ,:class =>"form-control",:required => "true" %>  
  </div>


  <div class="form-group" >
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true,:class =>"form-control",:required => "true"  %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> caracteres minimo)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" ,:class =>"form-control",:required => "true"  %>
  </div>

  <div class="form-group">
    <%= f.label :confirmar_password %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off",:class =>"form-control",:required => "true"  %>
  </div>
  <div class="form-group">
    <%= f.label :tipo_usuario %><br />
    <%= f.collection_select(:role_id, Role.all, :id, :nombre,{include_blank: 'Seleccione un opcion'}, :required => "true",:class =>"form-control") %>
  </div>


  <div class="actions">
    <%= f.submit "Registrarse" ,:class => "btn btn-primary"%>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
