<%= form_for(@empresas, :html => {:role => 'form'}) do |f| %>
    <% if @empresas.errors.any? %>
        <%= pluralize(@empresas.errors.count, "Errores") %>
        <% @empresas.errors.full_messages.each do |error| %>
            <%= error %>
        <% end %>
    <% end %>
    <%= f.label :rut_empresa %>
    <%= f.text_field :rut_empresa %>

    <%= f.label :nombre_empresa %>
    <%= f.text_field :nombre_empresa %>

    <%= f.submit %>
<% end %>